<UserControl x:Class="TrussMe.WPF.UserControls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrussMe.WPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <Grid>
            <StackPanel>
                <WrapPanel>
                    <Label>Сокращенный сортамент</Label>
                <CheckBox IsChecked="{Binding ShortListOfSections, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                </WrapPanel>
            </StackPanel>
    </Grid>
</UserControl>
